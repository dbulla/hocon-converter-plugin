<idea-plugin>
    <id>com.nurflugel</id>
    <name>HOCON Converter</name>
    <version>0.0.1</version>
    <vendor email="dbullard@nurflugel.com" url="https://github.com/dbulla/hocon-converter-plugin">Nurflugel.com</vendor>
    <description><![CDATA[
    Convert between HOCON map form, and HOCON propreties form.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <group>
            <action id="hocon.convertToProperty"
                    class="com.nurflugel.hocon.HoconConvertToConfAction"
                    text="HOCON - Map -> Properties"

                    description="Convert from sort of YAML to sort of properties">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift p"/>
            </action>
            <action id="hocon.convertToConf"
                    class="com.nurflugel.hocon.HoconConvertToPropertiesAction"
                    text="HOCON - Properties -> Map"
                    description="Convert from sort of properties to sort of YAML">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift c"/>
            </action>
            <add-to-group group-id="EditMenu" anchor="last"/>
        </group>
    </actions>
</idea-plugin>

